@model IEnumerable<MvcPelicula.Models.Pelicula>
@{
    ViewData["Title"] = "Listado de Películas";
    int contador = 1;
}

<h2 class="text-center">Listado General</h2>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a class="btn btn-outline-dark d-block mx-auto btn-lg" asp-controller="Pelicula"  asp-action="Crear">
            <i class="fa-solid fa-square-plus"></i> Nueva Película
        </a>
    </div>
</div>


<div class="row">
    <div class="offset-12">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Películas</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-hover" id="tablaPeliculas" width="100%" cellspacing="0">
                            <thead>
                                <tr class="bg-black">
                                    <th scope="col" class="text-white">#</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.Titulo)</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.FechaCarga)</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.Genero)</th>
                                    <th scope="col" class="text-white">@Html.DisplayNameFor(m => m.Price)</th>
                                    <th scope="col" class="text-white">Opciones</th>
                                </tr>
                                @foreach (var itemPelicula in Model)
                                {
                                    <tr>
                                        <td>@contador</td>
                                        <td>@Html.DisplayFor(m => itemPelicula.Titulo)</td>
                                        <td>@Html.DisplayFor(m => itemPelicula.FechaCarga)</td>
                                        <td>@Html.DisplayFor(m => itemPelicula.Genero)</td>
                                        <td>$.@Html.DisplayFor(m => itemPelicula.Price)</td>
                                        <td>
                                            <a class="btn btn-outline-primary mx-2" asp-action="Detalle" asp-route-id="@itemPelicula.Id">
                                                <i class="fa-solid fa-circle-info"></i> Detalle
                                            </a>
                                            <a class="btn btn-outline-warning mx-2" asp-action="Editar" asp-route-id="@itemPelicula.Id">
                                                <i class="fa-solid fa-pen-to-square"></i> Editar
                                            </a>
                                            <a class="btn btn-outline-danger mx-2" asp-action="Eliminar" asp-route-id="@itemPelicula.Id">
                                                <i class="fa-solid fa-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                    contador++;
                                }
                            </thead>
                        </table>
                    }
                    else
                    {
                        <p class="text-center"><strong>No hay registros</strong></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
